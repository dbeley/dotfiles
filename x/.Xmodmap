! Invert mouse buttons
pointer = 3 2 1

! Clear all modifiers
!clear shift
!clear lock
!clear control
!clear mod1
!clear mod2
!clear mod3
clear mod4
!clear mod5

!add shift   = Shift_L Shift_R
!add lock    = Caps_Lock
!add control = Control_L Control_R
!add mod1    = Alt_L Alt_R Meta_L
!add mod2    = Num_Lock
!add mod3    = Hyper_L
add mod4    = Super_L Super_R Hyper_L Hyper_R
!add mod5    = ISO_Level3_Shift Mode_switch

! xcape bindings
! Set Tab to Hyper_L
keycode 23 = Hyper_L
! Set Backslash to Hyper_L
keycode 51 = Hyper_R

! Set Win keys to Super
!keycode 133 = Super_L
!keycode 134 = Super_R
! Set MenuKey to Escape
keycode 135 = Escape

! Rebind Tab and Backslash
keycode any = Tab
!keycode 23 = Tab
keycode any = backslash
!keycode 51 = backslash
